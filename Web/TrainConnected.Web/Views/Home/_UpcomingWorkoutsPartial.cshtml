@model PaginatedList<TrainConnected.Web.ViewModels.Workouts.WorkoutsHomeViewModel>

@using System.Globalization
@using TrainConnected.Common
@using TrainConnected.Web.Helpers

<div class="table-responsive-xl">
    <table class="table table-hover">
        <thead class="thead">
            <tr class="table-trainconnected">
                <th>
                    <a class="trainconnected" asp-action="Index" asp-route-sortOrder="@ViewData["ActivitySortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(model => model.FirstOrDefault().ActivityName) &#8693;</a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().CoachUserName)
                </th>
                <th>
                    <a class="trainconnected" asp-action="Index" asp-route-sortOrder="@ViewData["TimeSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(model => model.FirstOrDefault().Time) &#8693;</a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Duration)
                </th>
                <th>
                    <a class="trainconnected" asp-action="Index" asp-route-sortOrder="@ViewData["LocationSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(model => model.FirstOrDefault().Location) &#8693;</a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().BookingsCount)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@Url.Content(item.ActivityIcon)" /> |
                        @item.ActivityName
                    </td>
                    <td>
                        @item.CoachUserName
                    </td>
                    <td>
                        @item.Time.ToString(GlobalConstants.DateTimeFormat, CultureInfo.InvariantCulture)
                    </td>
                    <td>
                        @item.Duration @GlobalConstants.TimeMeasurement
                    </td>
                    <td class="text-truncate" style="max-width: @GlobalConstants.TextMaxWidth;">
                        @item.Location
                    </td>
                    <td>
                        @item.BookingsCount / @item.MaxParticipants
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
