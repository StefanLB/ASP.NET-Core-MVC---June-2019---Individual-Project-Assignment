@model IEnumerable<TrainConnected.Web.ViewModels.Bookings.BookingsAllViewModel>
@using System.Globalization;

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My Bookings</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PaymentMethod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkoutActivityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkoutCoachUserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkoutTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkoutLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkoutNotes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.PaymentMethod
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @item.CreatedOn.ToString("dd/MM/yyyy hh:mm", CultureInfo.InvariantCulture)
            </td>
            <td>
                @item.WorkoutActivityName
            </td>
            <td>
                @item.WorkoutCoachUserName
            </td>
            <td>
                @item.WorkoutTime.ToString("dd/MM/yyyy hh:mm", CultureInfo.InvariantCulture)
            </td>
            <td>
                @item.WorkoutLocation
            </td>
            <td>
                @item.WorkoutNotes
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                @if (item.WorkoutTime > DateTime.UtcNow)
                {
                    <a asp-action="Cancel" asp-route-id="@item.Id"> | Cancel</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
