@model TrainConnected.Web.ViewModels.Certificates.CertificateDetailsViewModel
@using System.Globalization
@using TrainConnected.Common

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Certificate</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActivityName)
        </dt>
        <dd class="col-sm-10">
            @Model.ActivityName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IssuedBy)
        </dt>
        <dd class="col-sm-10">
            @Model.IssuedBy
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IssuedOn)
        </dt>
        <dd class="col-sm-10">
            @Model.IssuedOn.ToString(GlobalConstants.DateFormat, CultureInfo.InvariantCulture)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExpiresOn)
        </dt>
        <dd class="col-sm-10">
            @Model.ExpiresOn?.ToString(GlobalConstants.DateFormat, CultureInfo.InvariantCulture)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="All">Back to List</a>
</div>
