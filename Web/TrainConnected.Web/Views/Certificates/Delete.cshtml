@model TrainConnected.Web.ViewModels.Certificates.CertificateDetailsViewModel
@using System.Globalization
@using TrainConnected.Common

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Certificate</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActivityName)
        </dt>
        <dd class="col-sm-10">
            @Model.ActivityName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IssuedBy)
        </dt>
        <dd class="col-sm-10">
            @Model.IssuedBy
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IssuedOn)
        </dt>
        <dd class="col-sm-10">
            @Model.IssuedOn.ToString(GlobalConstants.DateFormat, CultureInfo.InvariantCulture)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExpiresOn)
        </dt>
        <dd class="col-sm-10">
            @Model.ExpiresOn?.ToString(GlobalConstants.DateFormat, CultureInfo.InvariantCulture)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="All">Back to List</a>
    </form>
</div>
