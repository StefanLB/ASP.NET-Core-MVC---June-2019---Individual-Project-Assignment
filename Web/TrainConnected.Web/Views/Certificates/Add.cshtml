@model TrainConnected.Web.InputModels.Certificates.CertificateCreateInputModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var activities = this.ViewData["Activities"] as IEnumerable<SelectListItem>;
}

<h1>Create</h1>

<h4>Certificate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Activity" ></label>
                <select class="form-control col-md-12" asp-for="Activity" asp-items="activities">
                    <option selected="" disabled="">--Select activity type--</option>
                </select>
                <span asp-validation-for="Activity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IssuedBy" class="control-label"></label>
                <input asp-for="IssuedBy" class="form-control" />
                <span asp-validation-for="IssuedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IssuedOn" class="control-label"></label>
                <input asp-for="IssuedOn" class="form-control" />
                <span asp-validation-for="IssuedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpiresOn" class="control-label"></label>
                <input asp-for="ExpiresOn" class="form-control" />
                <span asp-validation-for="ExpiresOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
