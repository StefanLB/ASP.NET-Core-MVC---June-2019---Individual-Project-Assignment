@model IEnumerable<TrainConnected.Web.ViewModels.Buddies.BuddiesAllViewModel>

@{
    ViewData["Title"] = "Find";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Find Buddies</h1>

@await this.Html.PartialAsync("_FindSearchBarPartial")

<div class="table-responsive-xl">
    <table class="table table-hover">
        <thead class="thead">
            <tr class="table-trainconnected">
                <th>
                    <a class="trainconnected" asp-action="Find" asp-route-sortOrder="@ViewData["UserNameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(model => model.FirstOrDefault().UserName) &#8693;</a>
                </th>
                <th>
                    <a class="trainconnected" asp-action="Find" asp-route-sortOrder="@ViewData["FirstNameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(model => model.FirstOrDefault().FirstName) &#8693;</a>
                </th>
                <th>
                    <a class="trainconnected" asp-action="Find" asp-route-sortOrder="@ViewData["LastNameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(model => model.FirstOrDefault().LastName) &#8693;</a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkoutsCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AchievementsCount)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.UserName
                    </td>
                    <td>
                        @item.FirstName
                    </td>
                    <td>
                        @item.LastName
                    </td>
                    <td>
                        @item.WorkoutsCount
                    </td>
                    <td>
                        @item.AchievementsCount
                    </td>
                    <td>
                        <a asp-action="Add" asp-route-id="@item.Id">Add</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@await this.Html.PartialAsync("_FindPaginationPartial")