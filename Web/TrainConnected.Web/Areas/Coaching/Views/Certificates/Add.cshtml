@model TrainConnected.Web.InputModels.Certificates.CertificateCreateInputModel

@{
    ViewData["Title"] = "Create";
    var activities = this.ViewData["Activities"] as IEnumerable<SelectListItem>;
}

<h1>Add Certificate</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Activity" ></label>
                <select asp-for="Activity" asp-items="activities" class="form-control col-md-12">
                    <option selected="" disabled="">--Select activity type--</option>
                </select>
                <span asp-validation-for="Activity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IssuedBy" class="control-label"></label>
                <input asp-for="IssuedBy" class="form-control" />
                <span asp-validation-for="IssuedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IssuedOn" class="control-label"></label>
                <input asp-for="IssuedOn" class="form-control" id="issuedOn" type="text" autocomplete="off" />
                <span asp-validation-for="IssuedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpiresOn" class="control-label"></label>
                <input asp-for="ExpiresOn" class="form-control" id="expiresOn" type="text" autocomplete="off" />
                <span asp-validation-for="ExpiresOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="All">Back to List</a>
</div>

<script>
    window.onload = () => {
        $('#issuedOn').datetimepicker({
            timepicker: false,
            format: 'm/d/Y',
            maxDate: '0'
        });
        $('#expiresOn').datetimepicker({
            timepicker: false,
            format: 'm/d/Y',
            minDate: '0'
        });
    };
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}